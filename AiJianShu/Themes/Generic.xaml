                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="PullPart">
                                            <DiscreteObjectKeyFrame KeyTime="0">
